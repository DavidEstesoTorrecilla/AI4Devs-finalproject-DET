# Backend Gateway - Variables de entorno
# Copiar este archivo a .env y configurar los valores

# Base de datos PostgreSQL
DATABASE_URL=postgresql+asyncpg://organis_user:organis_password@localhost:5432/organis_db

# Redis Cache
REDIS_URL=redis://:organis_redis_password@localhost:6379/0
REDIS_TTL=3600  # Tiempo de expiraci√≥n en segundos (1 hora)

# URLs de servicios
ORCHESTRATOR_URL=http://localhost:8001
SURFSENSE_URL=http://localhost:8002

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# API Configuration
PORT=8000
LOG_LEVEL=INFO

# JWT Authentication (pendiente implementar)
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
